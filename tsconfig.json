{
  "compilerOptions": {
    "baseUrl": "src/",
    "paths": {
      "renft-front/components/*": ["components/*"],
      "renft-front/hooks/*": ["hooks/*"],
      "renft-front/contracts/*": ["contracts/*"],
      "renft-front/services/*": ["services/*"],
      "renft-front/utils/*": ["utils/*"],
      "renft-front/utils": ["utils/index.ts"]
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "sourceMap": true,
    "downlevelIteration": true
  },
  "include": ["src"],
  "linterOptions": {
    "exclude": ["src/hardhat"]
  },
  "exclude": ["node_modules"]
}
